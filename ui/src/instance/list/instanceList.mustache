<div class="header-panel instance-list">
    <header class="header-panel-header">
        <div class="tool-bar-block">
            <div class="tool-bar-block-line">
                <div class="center-panel">
                    <div class="text-button" data-element="create">Create instance</div>
                    <div class="text-button" data-element="restart">Restart running instances</div>

                    <div class="tool-box">
                        <a href="http://www.yakjs.com/api/instances.html" class="icon-button icon-help-white" title="API Documentation"></a>
                        <div class="icon-button icon-refresh-white" data-element="refresh" title="Refresh"></div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <section class="header-panel-body">
        <div class="panel">
            <div class="center-panel">
                <div class="content-panel">
                    <div class="scroll-panel">
                        <ul class="list" data-element="instanceList" data-selectable>
                            {{#instances}}
                                <li class="list-item clickable" data-id="{{id}}" data-state="{{state}}">
                                    <div class="list-item-icon icon-instance" title="{{state}} {{stateTooltipText}}"></div>
                                    <div class="list-item-cell">
                                        <div class="toggle-button"
                                             data-element="startStopButton"
                                             data-is-active="{{isStarted}}"
                                             {{#isStarted}}title="Stops the instance."{{/isStarted}}
                                             {{^isStarted}}title="Starts the instance and runs it on port {{port}}. Other instances using the same port will be stopped."{{/isStarted}}>
                                        </div>
                                    </div>

                                    <div style="width: 50px" class="list-item-cell text-line-block">
                                        <span class="strong-text">{{port}}</span>
                                    </div>
                                    <div style="width: 350px" class="list-item-cell-fill text-line-block" title="{{description}}">{{name}}</div>

                                    <div
                                        class="list-item-icon {{#hasPluginsNotStarted}}icon-plugin-mullberry{{/hasPluginsNotStarted}} {{^hasPluginsNotStarted}}icon-plugin{{/hasPluginsNotStarted}}"
                                        title="Inactive plugins: {{inactivePluginsList}}"></div>
                                    <div class="list-item-cell">
                                        <span class="light-text" data-elemet="pluginStatus" title="Number of active/inactive plugins">{{pluginActiveCount}}/{{pluginTotalCount}}</span>
                                    </div>

                                    <div class="list-item-icon icon-lan-connect" title="Number of client connections"></div>
                                    <div class="list-item-cell" title="Number of client connections">
                                        <span class="light-text">{{connectionCount}}</span>
                                    </div>
                                </li>
                            {{/instances}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
