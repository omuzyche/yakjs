<div class="header-panel">
    <header class="header-panel-header">
        <div class="tool-bar-block">
            <div class="tool-bar-block-line">
                <div class="center-panel">
                    <div class="button" data-element="save" title="Saves and overwrites existing preset">Save</div>
                    <div class="button" data-element="run" title="Executes the command">Run</div>

                    {{#item.value}}
                        <div class="button" data-element="deleteButton" >Delete</div>
                    {{/item.value}}

                    <div class="button" data-element="cancelButton">Cancel</div>

                    <div class="tool-box">
                        <div class="icon-button icon-healing" data-element="prettify-json" title="Click to auto-format JSON data with 4 spaces. Use CTRL+LMB for 2 spaces."></div>
                        <div class="icon-button icon-minimize" data-element="minimize-editor" title="Minimize the code editor."></div>
                        <div class="icon-button icon-maximize" data-element="maximize-editor" title="Maximize the code editor."></div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="header-panel-body">
        <div class="panel">
            <div class="center-panel">
                <div class="content-panel">
                    <div class="header-panel">
                        <header class="header-panel-header" data-section="config">
                            <div class="frame-block" data-element="error-message">
                                <div class="warning-text"></div>
                            </div>

                            <div class="frame-block">
                                <label class="input-label">Preset name</label>
                                <p class="light-text">The unique name for your command preset. To put a preset into a group use groupName/presetName.</p>

                                <input type="text" class="input-text" name="commandPresetName" value="{{#item.value.groupName}}{{item.value.groupName}}/{{/item.value.groupName}}{{item.value.presetName}}"/>
                                <button class="inline-button" data-element="useGroupButton" data-group-name="*">Use star group</button>
                                <button class="inline-button" data-element="useGroupButton" data-group-name="fav">Use favourite group</button>
                            </div>

                            <div class="frame-block">
                                <label class="input-label">Display name</label>
                                <div class="light-text">Optional: The user interface will use this name.</div>
                                <input type="text" class="input-text" name="displayName" value="{{item.value.displayName}}"/>
                            </div>

                            <div class="frame-block">
                                <label class="input-label">Command</label>
                                <div class="light-text">Select a command from a plugin.</div>
                                <select class="input-select" data-element="pluginList"></select>
                                <select class="input-select" data-element="commandList"></select>
                            </div>

                            <div class="frame-block">
                                <label class="input-label">Command Data</label>
                                <div class="light-text">Optional: Provide JSON or text data that can be used by the command.</div>
                            </div>

                            <div class="divider-block"></div>
                        </header>

                        <div class="header-panel-body" data-section="editor">
                            <div class="panel">
                                <div data-element="jsonEditor" class="code-editor-panel"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
